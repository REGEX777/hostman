<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Image Upload</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        .dropzone {
            border: 2px dashed #4A5568;
            border-radius: 0.5rem;
        }
        .dropzone.dragging {
            border-color: #2D3748;
        }
        .file-details {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-top: 1rem;
        }
        .file-actions {
            display: flex;
            align-items: center;
        }
        .file-actions a, .file-actions button {
            margin-left: 1rem;
            padding: 0.5rem;
            background-color: #4CAF50;
            color: white;
            text-decoration: none;
            border-radius: 0.25rem;
            cursor: pointer;
        }
        .file-actions a:hover, .file-actions button:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen">
    <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-4xl">
        <h2 class="text-2xl font-bold mb-6 text-center">Upload and Manage Files</h2>
        <form id="uploadForm" action="/upload" method="POST" enctype="multipart/form-data" class="space-y-6">
            <div id="dropzone" class="dropzone p-6 flex items-center justify-center text-gray-600">
                <span>Drag & Drop your image here or click to select</span>
                <input type="file" name="files" id="fileInput" accept="image/*" multiple class="hidden">
            </div>
            <div id="previewContainer" class="hidden mt-4">
                <img id="imagePreview" src="#" alt="Image Preview" class="w-full rounded-lg" />
                <p id="fileName" class="text-gray-600 mt-2"></p>
            </div>
            <button type="submit" class="w-full bg-indigo-600 text-white py-2 rounded-lg hover:bg-indigo-700">Upload</button>
        </form>
        <div id="flashMessages" class="mt-4 text-center">
            <% if (message && message.length > 0) { %>
                <p class="text-green-500"><%= message %></p>
            <% } %>
        </div>
        <div id="fileList" class="mt-6">
            <% if (posts && posts.length > 0) { %>
                <h3 class="text-xl font-semibold mb-2">Uploaded Files</h3>
                <ul>
                    <% posts.forEach(post => { %>
                        <li class="file-details">
                            <div>
                                <p><strong>Name:</strong> <%= post.fileName %></p>
                                <p><strong>Size:</strong> <%= (post.fileSize / 1024).toFixed(2) %> KB</p>
                                <p><strong>Type:</strong> <%= post.fileType %></p>
                                <p><strong>Uploaded At:</strong> <%= new Date(post.fileUploadTime).toLocaleString() %></p>
                            </div>
                            <div class="file-actions">
                                <a href="/download/<%= post._id %>" class="text-white bg-blue-500 hover:bg-blue-600">Download</a>
                                <button data-id="<%= post._id %>" class="delete-file ml-2 text-white bg-red-500 hover:bg-red-600">Delete</button>
                            </div>
                        </li>
                    <% }) %>
                </ul>
            <% } else { %>
                <p>No files uploaded yet.</p>
            <% } %>
        </div>
    </div>

    <script>
        const dropzone = document.getElementById('dropzone');
        const fileInput = document.getElementById('fileInput');
        const previewContainer = document.getElementById('previewContainer');
        const imagePreview = document.getElementById('imagePreview');
        const fileName = document.getElementById('fileName');
        const flashMessages = document.getElementById('flashMessages');

        dropzone.addEventListener('dragover', (e) => {
            e.preventDefault();
            dropzone.classList.add('dragging');
        });

        dropzone.addEventListener('dragleave', () => {
            dropzone.classList.remove('dragging');
        });

        dropzone.addEventListener('drop', (e) => {
            e.preventDefault();
            dropzone.classList.remove('dragging');
            const files = e.dataTransfer.files;
            if (files.length > 0) {
                fileInput.files = files;
                showImagePreview(files[0]);
            }
        });

        dropzone.addEventListener('click', () => {
            fileInput.click();
        });

        fileInput.addEventListener('change', () => {
            if (fileInput.files.length > 0) {
                showImagePreview(fileInput.files[0]);
            }
        });

        function showImagePreview(file) {
            const reader = new FileReader();
            reader.onload = (e) => {
                imagePreview.src = e.target.result;
                previewContainer.classList.remove('hidden');
            };
            reader.readAsDataURL(file);
            fileName.textContent = file.name;
        }

        document.addEventListener('click', async (e) => {
            if (e.target && e.target.classList.contains('delete-file')) {
                const fileId = e.target.getAttribute('data-id');
                try {
                    const response = await fetch(`/post/${fileId}`, {
                        method: 'DELETE'
                    });
                    const result = await response.json();
                    if (response.ok) {
                        location.reload();
                    } else {
                        flashMessages.innerHTML = `<p class="text-red-500">${result.message}</p>`;
                    }
                } catch (error) {
                    flashMessages.innerHTML = `<p class="text-red-500">Error: ${error}</p>`;
                }
            }
        });
    </script>
</body>
</html>
