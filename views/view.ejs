<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= user.username %>'s Profile</title>
    <link rel="stylesheet" href="/path-to-your-css">
</head>
<body>
    <div class="profile-header">
        <img src="<%= user.profilePicture %>" alt="<%= user.username %>'s profile picture" class="profile-pic">
        <h1><%= user.username %></h1>
        <p><%= user.bio %></p>
        <div class="social-links">
            <% if (user.socialLinks.website) { %>
                <a href="<%= user.socialLinks.website %>" target="_blank">Website</a>
            <% } %>
            <% if (user.socialLinks.twitter) { %>
                <a href="https://twitter.com/<%= user.socialLinks.twitter %>" target="_blank">Twitter</a>
            <% } %>
            <% if (user.socialLinks.instagram) { %>
                <a href="https://instagram.com/<%= user.socialLinks.instagram %>" target="_blank">Instagram</a>
            <% } %>
        </div>
    </div>

    <h2>Your Uploaded Images</h2>
    <div class="image-grid">
        <% images.forEach(image => { %>
            <div class="image-card">
                <img src="<%= image.imageUrl %>" alt="<%= image.title %>" width="200" height="200">
                <h3><%= image.title %></h3>
                <p><%= image.description %></p>
            </div>
        <% }) %>
    </div>

    <h2>Edit Profile</h2>
    <form action="/profile/edit" method="POST">
        <textarea name="bio" placeholder="Update your bio"><%= user.bio %></textarea>
        <input type="text" name="website" placeholder="Website URL" value="<%= user.socialLinks.website %>">
        <input type="text" name="twitter" placeholder="Twitter Handle" value="<%= user.socialLinks.twitter %>">
        <input type="text" name="instagram" placeholder="Instagram Handle" value="<%= user.socialLinks.instagram %>">
        <button type="submit">Update Profile</button>
    </form>

    <a href="/">Back to Home</a>
</body>
</html>
