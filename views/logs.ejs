<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Error Logs</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-900 text-white">
    <div class="container mx-auto py-8">
        <h1 class="text-3xl font-bold mb-4">Error Logs</h1>
        <table class="table-auto w-full text-left">
            <thead>
                <tr>
                    <th class="px-4 py-2">Timestamp</th>
                    <th class="px-4 py-2">Message</th>
                    <th class="px-4 py-2">Endpoint</th>
                    <th class="px-4 py-2">Stack Trace</th>
                </tr>
            </thead>
            <tbody>
                <% logs.forEach(log => { %>
                    <tr class="border-b border-gray-700">
                        <td class="px-4 py-2"><%= new Date(log.timestamp).toLocaleString() %></td>
                        <td class="px-4 py-2"><%= log.message %></td>
                        <td class="px-4 py-2"><%= log.endpoint %></td>
                        <td class="px-4 py-2"><pre><%= log.stack %></pre></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>
