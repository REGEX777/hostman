<%- include('partials/nav') -%>
<div class="flex grow w-full mt-[4rem]">
    <%- include('partials/sidebar') -%>
    <div class="flex-grow ml-[5%] overflow-auto">
        <br>
        <div class="flex items-center justify-center w-full font-poppins">
            <div class="w-[90%] flex flex-col items-start justify-start gap-10">
                <p class="text-white text-2xl font-medium">Edit Embed Details</p>
                <div class="flex items-center justify-start h-auto w-[90%]">
                    <form action="/embedEditor/<%= image._id %>" method="POST" class="flex flex-col gap-10 items-center justify-center w-[60%] p-6 bg-[#111111] rounded-lg">
                        <div class="flex items-start justify-start flex-col w-full text-white gap-3">
                            <label for="title">Embed Title</label>
                            <input id="title" type="text" name="title" value="<%= image.embedMeta?.title || '' %>" class="w-full h-12 bg-[#181818] text-white px-4 rounded-lg outline-none" placeholder="Enter embed title">
                        </div>
                        <div class="flex items-start justify-start flex-col w-full text-white gap-3">
                            <label for="description">Embed Description</label>
                            <textarea id="description" name="description" class="w-full h-28 bg-[#181818] text-white px-4 py-2 rounded-lg outline-none" placeholder="Enter embed description"><%= image.embedMeta?.description || '' %></textarea>
                        </div>
                        <div class="flex items-start justify-start flex-col w-full text-white gap-3">
                            <label for="footer">Embed Footer</label>
                            <input id="footer" type="text" name="footer" value="<%= image.embedMeta?.footer || '' %>" class="w-full h-12 bg-[#181818] text-white px-4 rounded-lg outline-none" placeholder="Enter embed footer">
                        </div>
                        <div class="flex items-start justify-start flex-col w-full text-white gap-3">
                            <label for="color">Embed Color</label>
                            <input id="color" type="color" name="color" value="<%= image.embedMeta?.color || '#ffffff' %>" class="w-full h-12 bg-[#181818] text-white px-4 rounded-lg outline-none">
                        </div>
                        <button type="submit" class="w-[10rem] bg-[#3B071B] text-white font-medium h-[2.5rem] rounded-lg">
                            Save Changes
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
