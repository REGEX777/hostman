<%- include('partials/nav') -%>
<div class="flex grow w-full mt-[4rem]">
    <%- include('partials/sidebar') -%>
    <div class="flex-grow ml-[5%] overflow-auto">
        <br>
        <div class="flex items-center justify-center w-full font-poppins">
            <div class="w-[90%] flex flex-col items-start justify-start gap-10">
                <p class="text-white text-2xl font-medium">API Details</p>
                <div class="flex items-center justify-start h-[40rem] w-[90%]">
                    <form action="/embedEditor/<%= image._id %>" method="POST" class="flex flex-col gap-10 items-center justify-center w-[60%] h-[40rem] bg-[#111111] rounded-lg">
                        <div class="flex items-start justify-start flex-col w-[90%] text-white gap-3">
                            <p>Embed Title</p>
                            <div class="flex items-center justify-start h-12 w-[70%] bg-[#181818] rounded-lg">
                                <input type="text" name="title" value="<%= image.embedMeta?.title || '' %>" class="w-full h-full bg-transparent text-white px-4 rounded-lg outline-none">
                            </div>
                        </div>
                        <div class="flex items-start justify-start flex-col w-[90%] text-white gap-3">
                            <p>Embed Description</p>
                            <div class="flex items-center justify-start h-[12rem] w-[70%] bg-[#181818] rounded-lg">
                                <textarea name="description" class="w-full h-full bg-transparent text-white px-4 py-2 rounded-lg outline-none"><%= image.embedMeta?.description || '' %></textarea>
                            </div>
                        </div>
                        <div class="flex items-start justify-start flex-col w-[90%] text-white gap-3">
                            <p>Embed Footer</p>
                            <div class="flex items-center justify-start h-12 w-[70%] bg-[#181818] rounded-lg">
                                <input type="text" name="footer" value="<%= image.embedMeta?.footer || '' %>" class="w-full h-full bg-transparent text-white px-4 rounded-lg outline-none">
                            </div>
                        </div>
                        <div class="flex items-start justify-start flex-col w-[90%] text-white gap-3">
                            <p>Embed Color</p>
                            <div class="flex items-center justify-start h-12 w-[70%] bg-[#181818] rounded-lg">
                                <input type="color" name="color" value="<%= image.embedMeta?.color || '#ffffff' %>" class="w-full h-full bg-transparent text-white px-4 rounded-lg outline-none">
                            </div>
                        </div>
                        <button type="submit" class="w-[10rem] bg-[#3B071B] text-white font-medium h-[2.5rem] rounded-lg">
                            Submit
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
